---
import { getGitHubRepo } from '../lib/github';

interface Props {
  name: string;
  slug: string;
  tagline: string;
  author: string;
  author_github: string;
  tags: string[];
  language?: string;
  featured?: boolean;
  thumbnail?: string;
  github_url?: string;
}

const { name, slug, tagline, author, author_github, tags, language, featured, thumbnail, github_url } = Astro.props;
const repo = getGitHubRepo(github_url);

const langColors: Record<string, string> = {
  'C#': '#178600',
  'C++': '#f34b7d',
  'Rust': '#dea584',
  'TypeScript': '#3178c6',
  'JavaScript': '#f1e05a',
  'Python': '#3572A5',
  'PowerShell': '#012456',
};

const langColor = language ? langColors[language] || '#8b949e' : null;
---

<a href={`/tools/${slug}/`} class:list={["tool-card", { featured }]}>
  <div class="card-thumbnail">
    {thumbnail ? (
      <img src={thumbnail} alt={`Screenshot of ${name}`} loading="lazy" />
    ) : (
      <div class="card-placeholder">
        <span class="placeholder-emoji">ðŸ”§</span>
      </div>
    )}
  </div>
  <div class="card-body">
    <h3 class="card-title">{name}</h3>
    <p class="card-tagline">{tagline}</p>
    <div class="card-meta">
      <div class="card-tags">
        {tags.slice(0, 3).map(tag => (
          <span class="tag">{tag}</span>
        ))}
      </div>
      {language && (
        <span class="card-lang">
          <span class="lang-dot" style={`background: ${langColor}`}></span>
          {language}
        </span>
      )}
    </div>
    <div class="card-author">
      <img
        src={`https://github.com/${author_github}.png?size=24`}
        alt={author}
        class="author-avatar"
        loading="lazy"
      />
      <span class="author-name" data-author-search={author.toLowerCase()}>{author}</span>
      {repo && (
        <img
          src={`https://img.shields.io/github/stars/${repo}?style=flat&label=%E2%AD%90`}
          alt={`GitHub stars for ${name}`}
          class="card-stars"
          loading="lazy"
          onerror="this.style.display='none'"
        />
      )}
    </div>
  </div>
</a>

<script>
  document.querySelectorAll('.author-name[data-author-search]').forEach(el => {
    el.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      window.location.href = `/tools/?q=${encodeURIComponent((el as HTMLElement).dataset.authorSearch!)}`;
    });
  });
</script>

<style>
  .tool-card {
    display: flex;
    flex-direction: column;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
    color: var(--color-text);
    height: 100%;
  }

  .tool-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary);
    box-shadow: 0 8px 30px rgba(255, 137, 6, 0.15);
    color: var(--color-text);
  }

  .tool-card.featured {
    border-color: rgba(255, 137, 6, 0.3);
  }

  .card-thumbnail {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1932, #232146);
  }

  .card-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .tool-card:hover .card-thumbnail img {
    transform: scale(1.05);
  }

  .card-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(255, 137, 6, 0.1), rgba(242, 95, 76, 0.1));
  }

  .placeholder-emoji {
    font-size: 3rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .card-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    flex: 1;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.3;
  }

  .card-tagline {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    line-height: 1.4;
    flex: 1;
  }

  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .card-tags {
    display: flex;
    gap: 0.375rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.6rem;
    background: var(--color-tag-bg);
    color: var(--color-tag-text);
    border-radius: 50px;
    font-weight: 500;
  }

  .card-lang {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
    white-space: nowrap;
  }

  .lang-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .card-author {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
  }

  .author-avatar {
    width: 20px;
    height: 20px;
    border-radius: 50%;
  }

  .author-name {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    cursor: pointer;
  }

  .author-name:hover {
    text-decoration: underline;
    color: var(--color-primary);
  }

  .card-stars {
    height: 18px;
    flex-shrink: 0;
    margin-left: auto;
  }
</style>
